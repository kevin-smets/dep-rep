#!/usr/bin/env node
'use strict';

const argv = require('yargs').argv;
const depRep = require('../lib/depRep');

if (argv.v || argv.version) return console.log(require('../package').version);

var options = {
    silent: argv.silent || false
};

// path to package.json
if (argv.p) {
    if (typeof argv.p === "string") {
        options.p = argv.p;
    } else {
        return console.log("\n--p (path to package.json) expects a String (-p=\"../package.json\"\n");
    }
}

depRep.analyze(options);